<style type="text/css" media="screen">
  .jumbotron{
    background-color: <%= @category.color %> !important;
  }
</style>

<div class="categories-show">
  <h1>
    <strong>Name:</strong>
    <%= @category.name %>
  </h1>

  <% if !@category.user.nil? %>
    <h3>Create by:</h3>
    <h3> <%= @category.user.email %> </h3>
  <% end %>

  <% if user_signed_in? %>
    <% if current_user.is_editor? %>
      <%= link_to 'Edit', edit_category_path(@category) %> |
    <% end %>
  <% end %>
  <%= link_to 'Back', categories_path %>
</div>

<div class="row">
  <% @category.articles.each do |article| %>
    <div class="col-md-3">
      <div class="jumbotron">
        <h3>
          <%= article.title %> <br>
        </h3>
        <p>
          <%= truncate(article.body, length:100) %> <br>
        </p>
        <%= link_to 'Ver mÃ¡s', article, class:"btn btn-info" %>
        <% if current_user.is_editor? %>
          <%= link_to 'Editar', edit_article_path(article), class:"btn btn-success" %>
        <%end %>
      </div>
    </div>
  <% end %>
</div>