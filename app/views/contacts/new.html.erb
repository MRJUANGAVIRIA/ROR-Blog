<div class="jumbotron">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8 ">
        <div class="jumnotron">
          <h2 class="offset-md-2">Contacto:</h2>
          <%= form_with(model: @contact, local:true) do |f| %>

            <% if @contact.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

                <ul>
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :title, class:"offset-md-2 col-sm-2 col-form-label" %>
              <%= f.text_field :title, class:"offset-md-2 form-control col-sm-6" %>
            </div>

            <div class="form-group">
              <%= f.label :description, class:"offset-md-2 col-sm-2 col-form-label" %>
              <%= f.text_field :description, class:"offset-md-2 form-control col-sm-6" %>
            </div>

            <div class="form-group">
              <%= f.label :email, class:"offset-md-2 col-sm-2 col-form-label" %>
              <%= f.text_field :email, class:"offset-md-2 form-control col-sm-6" %>
            </div>

            <div class="form-group">
              <%= f.submit class:" offset-md-2 btn btn-primary" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>